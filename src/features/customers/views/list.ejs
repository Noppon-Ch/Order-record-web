                                                            aria-expanded="true" aria-haspopup="true">
                                                            Actions
                                                            <svg class="-mr-1 ml-2 h-5 w-5"
                                                                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                                                                fill="currentColor" aria-hidden="true">
                                                                <path fill-rule="evenodd"
                                                                    d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                                                    clip-rule="evenodd" />
                                                            </svg>
                                                        </button>

                                                        <div id="dropdown-<%= customer.customer_id %>"
                                                            class="hidden origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10"
                                                            role="menu" aria-orientation="vertical"
                                                            aria-labelledby="options-menu-<%= customer.customer_id %>">
                                                            <div class="py-1" role="none">
                                                                <a href="/orders/first?customerId=<%= customer.customer_id %>"
                                                                    class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900"
                                                                    role="menuitem">
                                                                    <span class="mr-3 text-blue-500">
                                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                                            class="h-5 w-5" fill="none"
                                                                            viewBox="0 0 24 24" stroke="currentColor">
                                                                            <path stroke-linecap="round"
                                                                                stroke-linejoin="round" stroke-width="2"
                                                                                d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                                                                        </svg>
                                                                    </span>
                                                                    New Order
                                                                </a>
                                                                <a href="/orders/continue?customerId=<%= customer.customer_id %>"
                                                                    class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900"
                                                                    role="menuitem">
                                                                    <span class="mr-3 text-indigo-500">
                                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                                            class="h-5 w-5" fill="none"
                                                                            viewBox="0 0 24 24" stroke="currentColor">
                                                                            <path stroke-linecap="round"
                                                                                stroke-linejoin="round" stroke-width="2"
                                                                                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                                                                        </svg>
                                                                    </span>
                                                                    Continue Order
                                                                </a>
                                                                <a href="/customer/<%= customer.customer_id %>/pdf"
                                                                    target="_blank"
                                                                    class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900"
                                                                    role="menuitem">
                                                                    <span class="mr-3 text-red-500">
                                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                                            class="h-5 w-5" fill="none"
                                                                            viewBox="0 0 24 24" stroke="currentColor">
                                                                            <path stroke-linecap="round"
                                                                                stroke-linejoin="round" stroke-width="2"
                                                                                d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 2H5a2 2 0 00-2 2v14a2 2 0 002 2z" />
                                                                        </svg>
                                                                    </span>
                                                                    PDF
                                                                </a>
                                                                <div class="border-t border-gray-100"></div>
                                                                <a href="/customer/edit/<%= customer.customer_id %>"
                                                                    class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900"
                                                                    role="menuitem">
                                                                    <span class="mr-3 text-yellow-500">
                                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                                            class="h-5 w-5" fill="none"
                                                                            viewBox="0 0 24 24" stroke="currentColor">
                                                                            <path stroke-linecap="round"
                                                                                stroke-linejoin="round" stroke-width="2"
                                                                                d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                                                        </svg>
                                                                    </span>
                                                                    Edit
                                                                </a>
                                                                <a href="#"
                                                                    onclick="deleteCustomer('<%= customer.customer_id %>', '<%= customer.customer_fname_th %>')"
                                                                    class="group flex items-center px-4 py-2 text-sm text-red-700 hover:bg-red-50 hover:text-red-900"
                                                                    role="menuitem">
                                                                    <span class="mr-3 text-red-500">
                                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                                            class="h-5 w-5" fill="none"
                                                                            viewBox="0 0 24 24" stroke="currentColor">
                                                                            <path stroke-linecap="round"
                                                                                stroke-linejoin="round" stroke-width="2"
                                                                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                                        </svg>
                                                                    </span>
                                                                    Delete
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Pagination (Simple implementation) -->
            <div
                class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 mt-4 rounded-lg shadow">
                <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                    <div>
                        <p class="text-sm text-gray-700">
                            Showing page <span class="font-medium">
                                <%= currentPage %>
                            </span>
                        </p>
                    </div>
                    <div>
                        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                            <% if (currentPage> 1) { %>
                                <a href="/customer/list?page=<%= currentPage - 1 %>&search=<%= searchQuery %>"
                                    class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                    <span class="sr-only">Previous</span>
                                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                                        fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd"
                                            d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                                            clip-rule="evenodd" />
                                    </svg>
                                </a>
                                <% } %>
                                    <a href="/customer/list?page=<%= currentPage + 1 %>&search=<%= searchQuery %>"
                                        class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                        <span class="sr-only">Next</span>
                                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                                            fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd"
                                                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                                clip-rule="evenodd" />
                                        </svg>
                                    </a>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <script src="/js/customer-actions.js"></script>
        <script>
            // Script to handle dropdown toggling with fixed positioning to avoid overflow clipping
            function toggleDropdown(id) {
                const dropdown = document.getElementById('dropdown-' + id);
                const button = document.getElementById('options-menu-' + id);
                const isHidden = dropdown.classList.contains('hidden');

                // Close all open dropdowns first
                document.querySelectorAll('[id^=dropdown-]').forEach(el => {
                    el.classList.add('hidden');
                    // Reset inline styles
                    el.style.position = '';
                    el.style.top = '';
                    el.style.left = '';
                    el.style.right = '';
                    el.style.zIndex = '';
                });

                // If it was hidden before we closed everything, now open it
                if (isHidden) {
                    dropdown.classList.remove('hidden');

                    const rect = button.getBoundingClientRect();

                    // Apply fixed positioning
                    dropdown.style.position = 'fixed';
                    dropdown.style.zIndex = '50'; // Ensure it's on top
                    dropdown.style.right = 'auto'; // Override the right-0 class

                    // Calculate position
                    // Top: button bottom
                    dropdown.style.top = (rect.bottom + 5) + 'px'; // +5 for a small gap

                    // Left: button right - dropdown width
                    // We need to measure dropdown width. It is visible now so offsetWidth works.
                    const dropdownWidth = dropdown.offsetWidth;
                    dropdown.style.left = (rect.right - dropdownWidth) + 'px';
                }
            }

            // Close dropdowns when clicking outside
            document.addEventListener('click', function (event) {
                const isButton = event.target.closest('button[id^=options-menu-]');
                const isDropdown = event.target.closest('div[id^=dropdown-]');

                if (!isButton && !isDropdown) {
                    document.querySelectorAll('[id^=dropdown-]').forEach(el => {
                        el.classList.add('hidden');
                        el.style.position = '';
                    });
                }
            });

            // Close dropdowns on scroll to prevent detachment
            window.addEventListener('scroll', function () {
                document.querySelectorAll('[id^=dropdown-]').forEach(el => {
                    if (!el.classList.contains('hidden')) {
                        el.classList.add('hidden');
                        el.style.position = '';
                    }
                });
            }, true);
        </script>
        <%- include('layout-footer') %>