<%- include('partials/app-header') %>
    <div class="max-w-4xl mx-auto py-10 px-4 sm:px-6 lg:px-8 animate-fade-in-up">

        <div class="mb-8">
            <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">เพิ่มลูกค้าเก่า</h1>
            <p class="mt-2 text-sm text-gray-500">ลงทะเบียนลูกค้าเก่าเข้าสู่ระบบ (บันทึกเฉพาะข้อมูลจำเป็น)</p>
        </div>

        <% if (typeof error !=='undefined' && error) { %>
            <div class="rounded-md bg-red-50 p-4 mb-6">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                            fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">
                            พบข้อผิดพลาด
                        </h3>
                        <div class="mt-2 text-sm text-red-700">
                            <p>
                                <%= error %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

                <form action="/customer/add-old-customer" method="POST"
                    class="space-y-12 divide-y divide-gray-200 bg-white p-8 rounded-2xl shadow-lg border border-gray-100">

                    <!-- ข้อมูลทั่วไป -->
                    <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 mb-6 pb-6">
                        <div class="sm:col-span-6">
                            <h2 class="text-xl font-semibold text-gray-900">ข้อมูลลูกค้าเก่า</h2>
                        </div>
                        <div class="sm:col-span-3">
                            <label for="customer_fname_th" class="block text-sm font-medium text-gray-700">ชื่อภาษาไทย
                                <span class="text-red-500">*</span></label>
                            <div class="mt-1">
                                <input type="text" name="customer_fname_th" id="customer_fname_th" required
                                    value="<%= (typeof values !== 'undefined' && values.customer_fname_th) ? values.customer_fname_th : '' %>"
                                    class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                            </div>
                        </div>
                        <div class="sm:col-span-3">
                            <label for="customer_lname_th"
                                class="block text-sm font-medium text-gray-700">นามสกุลภาษาไทย
                                <span class="text-red-500">*</span></label>
                            <div class="mt-1">
                                <input type="text" name="customer_lname_th" id="customer_lname_th" required
                                    value="<%= (typeof values !== 'undefined' && values.customer_lname_th) ? values.customer_lname_th : '' %>"
                                    class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                            </div>
                        </div>
                        <div class="sm:col-span-3">
                            <label for="customer_citizen_id"
                                class="block text-sm font-medium text-gray-700">เลขประจำตัวประชาชน
                                <span class="text-red-500">*</span></label>
                            <div class="mt-1">
                                <input type="text" name="customer_citizen_id" id="customer_citizen_id" required
                                    pattern="\d{13}"
                                    value="<%= (typeof values !== 'undefined' && values.customer_citizen_id) ? values.customer_citizen_id : '' %>"
                                    maxlength="13" inputmode="numeric"
                                    class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border"
                                    placeholder="13 หลัก">
                            </div>
                        </div>
                        <div class="sm:col-span-3">
                            <label for="customer_position" class="block text-sm font-medium text-gray-700">ตำแหน่ง <span
                                    class="text-red-500">*</span></label>
                            <select id="customer_position" name="customer_position" required
                                class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                <option value="BM" selected>BM</option>
                                <option value="AG">AG</option>
                                <option value="SFAG">SFAG</option>
                                <option value="SAG">SAG</option>
                            </select>
                        </div>
                    </div>

                    <!-- ข้อมูลผู้แนะนำ -->
                    <div class="pt-4 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 mb-6 pb-6">
                        <div class="sm:col-span-6">
                            <h2 class="text-xl font-semibold text-gray-900">ข้อมูลผู้แนะนำ</h2>
                        </div>
                        <div class="sm:col-span-3">
                            <label for="referrer_citizen_id"
                                class="block text-sm font-medium text-gray-700">เลขประจำตัวประชาชนผู้แนะนำ <span
                                    class="text-red-500">*</span></label>
                            <div class="mt-1 flex gap-2">
                                <input type="text" name="referrer_citizen_id" id="referrer_citizen_id" pattern="\d{13}"
                                    required
                                    value="<%= (typeof values !== 'undefined' && values.customer_recommender_id) ? values.customer_recommender_id : '' %>"
                                    maxlength="13" inputmode="numeric"
                                    class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border"
                                    placeholder="13 หลัก">
                                <button type="button" id="openSearchModalBtn"
                                    class="inline-flex items-center px-3 py-2 border border-blue-300 shadow-sm text-sm font-medium rounded-md text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none mb-[1px]">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                        <div class="sm:col-span-3">
                            <label for="referrer_name"
                                class="block text-sm font-medium text-gray-700">ชื่อ-นามสกุลผู้แนะนำ
                                <span class="text-red-500">*</span></label>
                            <div class="mt-1">
                                <input type="text" name="referrer_name" id="referrer_name" required
                                    class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                            </div>
                        </div>
                    </div>

                    <!-- PDPA Consent -->
                    <div class="pt-4 mb-6 pb-6 border-b border-gray-200">
                        <div class="flex items-start">
                            <div class="flex items-center h-5">
                                <input id="customer_consent" name="customer_consent" type="checkbox" required
                                    class="focus:ring-blue-500 h-5 w-5 text-blue-600 border-gray-300 rounded cursor-pointer">
                            </div>
                            <div class="ml-3 text-sm leading-5">
                                <label for="customer_consent"
                                    class="font-medium text-gray-700 select-none cursor-pointer">
                                    ข้าพเจ้าขอรับรองว่าลูกค้าได้อ่านและยอมรับ
                                    <button type="button" id="openConsentModalBtn"
                                        class="text-blue-600 hover:text-blue-800 font-bold hover:underline bg-transparent border-none p-0 cursor-pointer transition-colors duration-200">
                                        นโยบายความเป็นส่วนตัว (PDPA)
                                    </button>
                                    เรียบร้อยแล้ว
                                    <span class="text-red-500">*</span>
                                </label>
                                <p class="text-gray-500 text-xs mt-1">ต้องได้รับความยินยอมก่อนบันทึกข้อมูล</p>
                            </div>
                        </div>
                    </div>

                    <div class="pt-5">
                        <div class="flex justify-end">
                            <a href="/homepage"
                                class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                ยกเลิก
                            </a>
                            <button type="submit"
                                class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                บันทึกข้อมูลลูกค้าเก่า
                            </button>
                        </div>
                    </div>
                </form>
    </div>

    <!-- Search Modal -->
    <div id="searchModal" class="hidden fixed z-50 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog"
        aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-gray-500/75 transition-opacity" aria-hidden="true"
                id="closeSearchModalOverlay">
            </div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
            <div
                class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6 relative z-10">
                <div>
                    <div class="mt-3 text-center sm:mt-5">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">ค้นหาผู้แนะนำ
                        </h3>
                        <div class="mt-2">
                            <input type="text" id="searchInput"
                                class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border"
                                placeholder="ระบุชื่อ หรือ เลขบัตรประชาชน...">
                            <button type="button" id="performSearchBtn"
                                class="mt-2 w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none sm:text-sm">
                                ค้นหา
                            </button>
                        </div>
                        <div class="mt-4 text-left max-h-60 overflow-y-auto" id="searchResults">
                            <!-- Results will be populated here -->
                        </div>
                    </div>
                </div>
                <div class="mt-5 sm:mt-6">
                    <button type="button" id="closeSearchModalBtn"
                        class="w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:text-sm">
                        ปิด
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Consent Modal (PDPA) -->
    <div id="consentModal" class="hidden fixed z-[60] inset-0 overflow-y-auto" aria-labelledby="modal-title"
        role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <!-- Modal Backdrop -->
            <div class="fixed inset-0 bg-gray-500/75 transition-opacity backdrop-blur-sm" aria-hidden="true"
                id="closeConsentModalOverlay"></div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

            <!-- Modal Panel -->
            <div
                class="inline-block align-bottom bg-white rounded-2xl text-left overflow-hidden shadow-2xl transform transition-all sm:my-8 sm:align-middle sm:max-w-3xl sm:w-full relative z-10 border border-gray-100">
                <!-- Header -->
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-0">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">

                            <!-- Scrolling Content Area -->
                            <div class="mt-2 text-left">
                                <div id="consentScrollArea"
                                    class="h-[60vh] overflow-y-auto rounded-xl p-6 bg-gray-50 text-gray-700 text-sm leading-relaxed prose max-w-none shadow-inner border border-gray-100">
                                    <!-- Loading State -->
                                    <div id="consentLoading" class="flex justify-center items-center h-full py-20">
                                        <svg class="animate-spin h-10 w-10 text-blue-600"
                                            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor"
                                                stroke-width="4"></circle>
                                            <path class="opacity-75" fill="currentColor"
                                                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                                            </path>
                                        </svg>
                                    </div>
                                    <!-- Content -->
                                    <div id="consentContent" class="hidden"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Footer Buttons -->
                <div class="bg-white px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse pb-6 pt-4 border-t border-gray-50">
                    <button type="button" id="acceptConsentBtn"
                        class="w-full inline-flex justify-center rounded-xl border border-transparent shadow-lg shadow-blue-200 px-5 py-3 bg-blue-600 text-base font-semibold text-white hover:bg-blue-700 focus:outline-none sm:ml-3 sm:w-auto sm:text-sm transform transition hover:-translate-y-0.5">
                        รับทราบ
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Script to handle Consent Modal -->
    <script nonce="<%= (typeof nonce !== 'undefined' ? nonce : '') %>">
        document.addEventListener('DOMContentLoaded', function () {
            const consentModal = document.getElementById('consentModal');
            const openBtn = document.getElementById('openConsentModalBtn');
            const closeOverlay = document.getElementById('closeConsentModalOverlay');
            const acceptBtn = document.getElementById('acceptConsentBtn');
            const contentDiv = document.getElementById('consentContent');
            const loadingDiv = document.getElementById('consentLoading');

            function openModal() {
                consentModal.classList.remove('hidden');
                if (contentDiv.innerHTML.trim() === '') {
                    fetch('/consents/customer-pdpa.html')
                        .then(res => {
                            if (!res.ok) throw new Error('Failed to load');
                            return res.text();
                        })
                        .then(html => {
                            contentDiv.innerHTML = html;
                            loadingDiv.classList.add('hidden');
                            contentDiv.classList.remove('hidden');
                        })
                        .catch(err => {
                            contentDiv.innerHTML = '<p class="text-red-500 text-center p-4">ไม่สามารถโหลดข้อมูลได้ กรุณาลองใหม่อีกครั้ง</p>';
                            loadingDiv.classList.add('hidden');
                            contentDiv.classList.remove('hidden');
                        });
                }
            }

            function closeModal() {
                consentModal.classList.add('hidden');
            }

            if (openBtn) {
                openBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    e.stopPropagation();
                    openModal();
                });
            }
            if (closeOverlay) closeOverlay.addEventListener('click', closeModal);
            if (acceptBtn) acceptBtn.addEventListener('click', closeModal);
        });
    </script>

    <script src="/js/customers/form.js"></script>
    <%- include('partials/app-footer') %>