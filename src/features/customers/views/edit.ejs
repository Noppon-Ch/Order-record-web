<%- include('main', { body: ` <div class="max-w-4xl mx-auto py-10 px-4 sm:px-6 lg:px-8 animate-fade-in-up">

    <div class="mb-8">
        <h1 class="text-3xl font-extrabold text-amber-600 tracking-tight">Edit Customer</h1>
        <p class="mt-2 text-sm text-gray-500">Update customer information.</p>
    </div>

    ${ (typeof error !== 'undefined' && error) ? `
    <div class="rounded-md bg-red-50 p-4 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                    fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                        clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                    Error
                </h3>
                <div class="mt-2 text-sm text-red-700">
                    <p>${error}</p>
                </div>
            </div>
        </div>
    </div>
    ` : '' }

    <form action="/customer/edit/${customer.customer_id}" method="POST"
        class="space-y-12 divide-y divide-gray-200 bg-white p-8 rounded-2xl shadow-lg border border-gray-100">

        <!-- General Info -->
        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 mb-6 pb-6">
            <div class="sm:col-span-6">
                <h2 class="text-xl font-semibold text-gray-900">ข้อมูลทั่วไป</h2>
            </div>

            <div class="sm:col-span-3">
                <label for="customer_reg_date" class="block text-sm font-medium text-gray-700">วันที่สมัคร *</label>
                <div class="mt-1">
                    <input type="date" name="customer_reg_date" id="customer_reg_date" required
                        value="${customer.customer_registerdate}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                </div>
            </div>

            <div class="sm:col-span-3">
                <label for="customer_position" class="block text-sm font-medium text-gray-700">ตำแหน่ง</label>
                <select id="customer_position" name="customer_position" required
                    class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-amber-500 focus:border-amber-500 sm:text-sm">
                    <option value="BM" ${customer.customer_position==='BM' ? 'selected' : '' }>BM</option>
                    <option value="AG" ${customer.customer_position==='AG' ? 'selected' : '' }>AG</option>
                    <option value="SFAG" ${customer.customer_position==='SFAG' ? 'selected' : '' }>SFAG</option>
                    <option value="SAG" ${customer.customer_position==='SAG' ? 'selected' : '' }>SAG</option>
                </select>
            </div>
        </div>

        <!-- Personal Info & Address -->
        <div class="pt-4 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 mb-6 pb-6">
            <div class="sm:col-span-6">
                <h2 class="text-xl font-semibold text-gray-900">ข้อมูลส่วนตัวและที่อยู่
                </h2>
            </div>

            <div class="sm:col-span-3">
                <label for="customer_fname_th" class="block text-sm font-medium text-gray-700">ชื่อภาษาไทย *</label>
                <div class="mt-1">
                    <input type="text" name="customer_fname_th" id="customer_fname_th" required
                        value="${customer.customer_fname_th}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                </div>
            </div>
            <div class="sm:col-span-3">
                <label for="customer_lname_th" class="block text-sm font-medium text-gray-700">นามสกุลภาษาไทย *</label>
                <div class="mt-1">
                    <input type="text" name="customer_lname_th" id="customer_lname_th" required
                        value="${customer.customer_lname_th}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                </div>
            </div>

            <div class="sm:col-span-3">
                <label for="customer_fname_en" class="block text-sm font-medium text-gray-700">First Name
                    (English)</label>
                <div class="mt-1">
                    <input type="text" name="customer_fname_en" id="customer_fname_en"
                        value="${customer.customer_fname_en || ''}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                </div>
            </div>
            <div class="sm:col-span-3">
                <label for="customer_lname_en" class="block text-sm font-medium text-gray-700">Last Name
                    (English)</label>
                <div class="mt-1">
                    <input type="text" name="customer_lname_en" id="customer_lname_en"
                        value="${customer.customer_lname_en || ''}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                </div>
            </div>

            <div class="sm:col-span-2">
                <label for="customer_gender" class="block text-sm font-medium text-gray-700">เพศ *</label>
                <select id="customer_gender" name="customer_gender" required
                    class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-amber-500 focus:border-amber-500 sm:text-sm">
                    <option value="">เลือก...</option>
                    <option value="ชาย" ${customer.customer_gender==='ชาย' ? 'selected' : '' }>ชาย</option>
                    <option value="หญิง" ${customer.customer_gender==='หญิง' ? 'selected' : '' }>หญิง</option>
                    <option value="นิติบุคคล" ${customer.customer_gender==='นิติบุคคล' ? 'selected' : '' }>นิติบุคคล
                    </option>
                </select>
            </div>
            <div class="sm:col-span-2">
                <label for="customer_nationality" class="block text-sm font-medium text-gray-700">สัญชาติ *</label>
                <div class="mt-1">
                    <input type="text" name="customer_nationality" id="customer_nationality" required
                        value="${customer.customer_nationality || 'ไทย'}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                </div>
            </div>
            <div class="sm:col-span-2">
                <label for="customer_birthdate" class="block text-sm font-medium text-gray-700">วันเดือนปีเกิด *</label>
                <div class="mt-1">
                    <input type="date" name="customer_birthdate" id="customer_birthdate" required
                        value="${customer.customer_birthdate}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                </div>
            </div>

            <div class="sm:col-span-3">
                <label for="customer_citizen_id" class="block text-sm font-medium text-gray-700">เลขประจำตัวประชาชน
                    *</label>
                <div class="mt-1">
                    <input type="text" name="customer_citizen_id" id="customer_citizen_id" required maxlength="13"
                        inputmode="numeric" value="${(customer.customer_citizen_id || '').trim()}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border"
                        placeholder="13 หลัก">
                </div>
            </div>
            <div class="sm:col-span-3">
                <label for="customer_tax_id"
                    class="block text-sm font-medium text-gray-700">เลขประจำตัวผู้เสียภาษี</label>
                <div class="mt-1">
                    <input type="text" name="customer_tax_id" id="customer_tax_id" pattern="\d{13}" maxlength="13"
                        inputmode="numeric" value="${customer.customer_tax_id || ''}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border"
                        placeholder="13 หลัก">
                </div>
            </div>

            <div class="sm:col-span-6">
                <label for="customer_address1" class="block text-sm font-medium text-gray-700">ที่อยู่ (บ้านเลขที่ หมู่
                    ซอย ถนน) *</label>
                <div class="mt-1">
                    <input type="text" name="customer_address1" id="customer_address1" required
                        value="${customer.customer_address1}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                </div>
            </div>
            <div class="sm:col-span-6">
                <label for="customer_address2" class="block text-sm font-medium text-gray-700">แขวง/ตำบล เขต/อำเภอ
                    จังหวัด *</label>
                <div class="mt-1">
                    <input type="text" name="customer_address2" id="customer_address2" required
                        value="${customer.customer_address2}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border"
                        placeholder="แขวง/ตำบล เขต/อำเภอ จังหวัด">
                </div>
            </div>
            <div class="sm:col-span-2">
                <label for="customer_zipcode" class="block text-sm font-medium text-gray-700">รหัสไปรษณีย์ *</label>
                <div class="mt-1">
                    <input type="text" name="customer_zipcode" id="customer_zipcode" required
                        value="${customer.customer_zipcode}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                </div>
            </div>
            <div class="sm:col-span-2">
                <label for="customer_phone" class="block text-sm font-medium text-gray-700">เบอร์มือถือ *</label>
                <div class="mt-1">
                    <input type="text" name="customer_phone" id="customer_phone" required
                        value="${customer.customer_phone}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                </div>
            </div>
        </div>

        <!-- Referrer Info -->
        <div class="pt-4 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 mb-6 pb-6">
            <div class="sm:col-span-6">
                <h2 class="text-xl font-semibold text-gray-900">ข้อมูลผู้แนะนำ</h2>
            </div>
            <div class="sm:col-span-3">
                <label for="referrer_citizen_id"
                    class="block text-sm font-medium text-gray-700">เลขประจำตัวประชาชนผู้แนะนำ *</label>
                <div class="mt-1 flex gap-2">
                    <input type="text" name="referrer_citizen_id" id="referrer_citizen_id" required maxlength="13"
                        inputmode="numeric" value="${(customer.customer_recommender_id || '').trim()}"
                        class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border"
                        placeholder="13 หลัก">
                    <button type="button" id="openSearchModalBtn"
                        class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500">
                        Search
                    </button>
                </div>
            </div>
            <div class="sm:col-span-3">
                <label for="referrer_name" class="block text-sm font-medium text-gray-700">ชื่อ-นามสกุลผู้แนะนำ</label>
                <div class="mt-1">
                    <input type="text" name="referrer_name" id="referrer_name"
                        value="${recommender ? (recommender.customer_fname_th + ' ' + recommender.customer_lname_th) : ''}"
                        class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border">
                    <!-- Note: We might not have referrer name directly in customer object unless joined, client might need to fetch it or we make do -->
                </div>
            </div>
        </div>


        <!-- PDPA Consent -->
        <div class="pt-4 mb-6 pb-6 border-b border-gray-200">
            <div class="flex items-start">
                <div class="flex items-center h-5">
                    <input id="customer_consent" name="customer_consent" type="checkbox" required
                        ${customer.customer_consent_status ? 'checked' : '' }
                        class="focus:ring-amber-500 h-5 w-5 text-amber-600 border-gray-300 rounded cursor-pointer">
                </div>
                <div class="ml-3 text-sm leading-5">
                    <label for="customer_consent" class="font-medium text-gray-700 select-none cursor-pointer">
                        ข้าพเจ้าขอรับรองว่าลูกค้าได้อ่านและยอมรับ
                        <button type="button" id="openConsentModalBtn"
                            class="text-amber-600 hover:text-amber-800 font-bold hover:underline bg-transparent border-none p-0 cursor-pointer transition-colors duration-200">
                            นโยบายความเป็นส่วนตัว (PDPA)
                        </button>
                        เรียบร้อยแล้ว
                        <span class="text-red-500">*</span>
                    </label>
                    <p class="text-gray-500 text-xs mt-1">ต้องได้รับความยินยอมก่อนบันทึกข้อมูล</p>
                </div>
            </div>
        </div>

        <div class="pt-5">
            <div class="flex justify-end">
                <a href="/homepage"
                    class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500">
                    Cancel
                </a>
                <button type="submit"
                    class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500">
                    Save Changes
                </button>
            </div>
        </div>
    </form>
    </div>

    <!-- Search Modal -->
    <div id="searchModal" class="hidden fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog"
        aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"
                id="closeSearchModalOverlay"></div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
            <div
                class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
                <div>
                    <div class="mt-3 text-center sm:mt-5">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">Search Referrer</h3>
                        <div class="mt-2">
                            <input type="text" id="searchInput"
                                class="shadow-sm focus:ring-amber-500 focus:border-amber-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border"
                                placeholder="Enter Name or Citizen ID...">
                            <button type="button" id="performSearchBtn"
                                class="mt-2 w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-amber-600 text-base font-medium text-white hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 sm:text-sm">
                                Search
                            </button>
                        </div>
                        <div class="mt-4 text-left max-h-60 overflow-y-auto" id="searchResults">
                            <!-- Results will be populated here -->
                        </div>
                    </div>
                </div>
                <div class="mt-5 sm:mt-6">
                    <button type="button" id="closeSearchModalBtn"
                        class="w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 sm:text-sm">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Consent Modal (PDPA) -->
    <div id="consentModal" class="hidden fixed z-[60] inset-0 overflow-y-auto" aria-labelledby="modal-title"
        role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <!-- Modal Backdrop -->
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"
                id="closeConsentModalOverlay"></div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

            <!-- Modal Panel -->
            <div
                class="inline-block align-bottom bg-white rounded-2xl text-left overflow-hidden shadow-2xl transform transition-all sm:my-8 sm:align-middle sm:max-w-3xl sm:w-full relative z-10 border border-gray-100">
                <!-- Header -->
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-0">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                            <h3 class="text-xl leading-6 font-bold text-gray-900 mb-4" id="modal-title">
                                นโยบายความเป็นส่วนตัวลูกค้า (PDPA)
                            </h3>
                            <!-- Scrolling Content Area -->
                            <div class="mt-2 text-left">
                                <div id="consentScrollArea"
                                    class="h-[60vh] overflow-y-auto rounded-xl p-6 bg-gray-50 text-gray-700 text-sm leading-relaxed prose max-w-none shadow-inner border border-gray-100">
                                    <!-- Loading State -->
                                    <div id="consentLoading" class="flex justify-center items-center h-full py-20">
                                        <svg class="animate-spin h-10 w-10 text-amber-600"
                                            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor"
                                                stroke-width="4"></circle>
                                            <path class="opacity-75" fill="currentColor"
                                                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                                            </path>
                                        </svg>
                                    </div>
                                    <!-- Content -->
                                    <div id="consentContent" class="hidden"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Footer Buttons -->
                <div class="bg-white px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse pb-6 pt-4 border-t border-gray-50">
                    <button type="button" id="acceptConsentBtn"
                        class="w-full inline-flex justify-center rounded-xl border border-transparent shadow-lg shadow-amber-200 px-5 py-3 bg-amber-600 text-base font-semibold text-white hover:bg-amber-700 focus:outline-none sm:ml-3 sm:w-auto sm:text-sm transform transition hover:-translate-y-0.5">
                        รับทราบ
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Script to handle Consent Modal -->
    <script nonce="${nonce}">
        document.addEventListener('DOMContentLoaded', function () {
            const consentModal = document.getElementById('consentModal');
            const openBtn = document.getElementById('openConsentModalBtn');
            const closeOverlay = document.getElementById('closeConsentModalOverlay');
            const acceptBtn = document.getElementById('acceptConsentBtn');
            const contentDiv = document.getElementById('consentContent');
            const loadingDiv = document.getElementById('consentLoading');

            function openModal() {
                consentModal.classList.remove('hidden');
                if (contentDiv.innerHTML.trim() === '') {
                    fetch('/consents/customer-pdpa.html')
                        .then(res => {
                            if (!res.ok) throw new Error('Failed to load');
                            return res.text();
                        })
                        .then(html => {
                            contentDiv.innerHTML = html;
                            loadingDiv.classList.add('hidden');
                            contentDiv.classList.remove('hidden');
                        })
                        .catch(err => {
                            contentDiv.innerHTML = '<p class="text-red-500 text-center p-4">ไม่สามารถโหลดข้อมูลได้ กรุณาลองใหม่อีกครั้ง</p>';
                            loadingDiv.classList.add('hidden');
                            contentDiv.classList.remove('hidden');
                        });
                }
            }

            function closeModal() {
                consentModal.classList.add('hidden');
            }

            if (openBtn) openBtn.addEventListener('click', openModal);
            if (closeOverlay) closeOverlay.addEventListener('click', closeModal);
            if (acceptBtn) acceptBtn.addEventListener('click', closeModal);
        });
    </script>
    <script src="/js/customers/form.js"></script>
    ` }) %>