<%- include('partials/app-header') %>

    <div class="max-w-7xl mx-auto py-0 sm:py-10 px-0 sm:px-6 lg:px-8 animate-fade-in-up">

        <form id="orderForm"
            class="overflow-hidden space-y-6 divide-y divide-gray-200 bg-white p-4 sm:p-8 sm:rounded-2xl sm:shadow-lg border-b sm:border border-gray-100">
            <!-- Page Header -->
            <div
                class="-mx-4 -mt-4 p-6 sm:-mx-8 sm:-mt-8 sm:p-8 bg-linear-65 from-sky-500 to-teal-500 sm:rounded-t-2xl border-b border-gray-200 mb-8">
                <h1 class="text-2xl sm:text-3xl font-extrabold text-white tracking-tight">ใบสั่งซื้อรอบแรก</h1>
                <p class="mt-2 text-sm text-white">สร้างรายการสั่งซื้อใหม่รอบแรกสำหรับลูกค้า</p>
            </div>
            <!-- 1. General Info -->
            <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 py-6">
                <div class="sm:col-span-6">
                    <h2 class="text-xl font-semibold text-gray-900">ข้อมูลทั่วไป</h2>
                </div>
                <!-- 1.1 Date -->
                <div class="sm:col-span-2">
                    <label for="order_date" class="block text-sm font-medium text-gray-700">วันที่สั่งซื้อ <span
                            class="text-red-500">*</span></label>
                    <input type="date" name="order_date" id="order_date"
                        class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 p-2 border"
                        value="<%= new Date().toISOString().split('T')[0] %>">
                </div>
            </div>

            <!-- 2. Buyer Info -->
            <div class="pt-4 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 py-6">
                <div class="sm:col-span-6">
                    <h2 class="text-xl font-semibold text-gray-900">ข้อมูลลูกค้า</h2>
                    <input type="hidden" id="customer_uuid" value="<%= customer ? customer.customer_id : '' %>">
                </div>

                <!-- 2.1 Buyer ID -->
                <div class="sm:col-span-2">
                    <div class="flex gap-2">
                        <div class="flex-grow">
                            <label for="buyer_id" class="block text-sm font-medium text-gray-700">เลขบัตรประชาชนผู้ซื้อ
                                <span class="text-red-500">*</span></label>
                            <input type="text" name="buyer_id" id="buyer_id" readonly
                                class="mt-1 block w-full shadow-sm bg-gray-50 sm:text-sm border-gray-300 rounded-md p-2 border"
                                value="<%= customer ? customer.customer_citizen_id : '' %>">
                        </div>
                        <div class="flex items-end">
                            <button type="button" id="searchBuyerBtn"
                                class="inline-flex items-center px-3 py-2 border border-blue-300 shadow-sm text-sm font-medium rounded-md text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none mb-[1px]">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- 2.2 Buyer Name -->
                <div class="sm:col-span-2">
                    <label for="buyer_name" class="block text-sm font-medium text-gray-700">ชื่อผู้ซื้อ <span
                            class="text-red-500">*</span></label>
                    <input type="text" id="buyer_name" readonly
                        class="mt-1 block w-full shadow-sm bg-gray-50 sm:text-sm border-gray-300 rounded-md p-2 border"
                        value="<%= customer ? (customer.customer_fname_th + ' ' + customer.customer_lname_th) : '' %>">
                </div>

                <!-- 2.3 Buyer Position -->
                <div class="sm:col-span-2">
                    <label for="buyer_position" class="block text-sm font-medium text-gray-700">ตำแหน่ง</label>
                    <input type="text" id="buyer_position" readonly
                        class="mt-1 block w-full shadow-sm bg-gray-50 sm:text-sm border-gray-300 rounded-md p-2 border"
                        value="<%= customer ? customer.customer_position : '' %>">
                </div>
            </div>

            <!-- 3. Referrer & 4. Assistant -->
            <div class="pt-4 grid grid-cols-1 gap-8 md:grid-cols-2 py-6">
                <!-- Referrer -->
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">ข้อมูลผู้แนะนำ</h3>
                    <div class="space-y-4">
                        <div>
                            <label for="referrer_id"
                                class="block text-sm font-medium text-gray-700">เลขบัตรประชาชน</label>
                            <input type="text" name="referrer_id" id="referrer_id" maxlength="13" readonly
                                class="mt-1 block w-full shadow-sm bg-gray-50 sm:text-sm border-gray-300 rounded-md p-2 border"
                                placeholder="13 หลัก" value="<%= recommender ? recommender.customer_citizen_id : '' %>">
                            <input type="hidden" id="referrer_uuid"
                                value="<%= recommender ? recommender.customer_id : '' %>">
                        </div>
                        <div>
                            <label for="referrer_name"
                                class="block text-sm font-medium text-gray-700">ชื่อ-นามสกุล</label>
                            <input type="text" name="referrer_name" id="referrer_name" readonly
                                class="mt-1 block w-full shadow-sm bg-gray-50 sm:text-sm border-gray-300 rounded-md p-2 border"
                                value="<%= recommender ? (recommender.customer_fname_th + ' ' + recommender.customer_lname_th) : '' %>">
                        </div>
                    </div>
                </div>

                <!-- Assistant -->
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">ข้อมูลผู้ช่วย
                    </h3>
                    <div class="space-y-4">
                        <div class="flex gap-2">
                            <div class="flex-grow">
                                <label for="assistant_id" class="block text-sm font-medium text-gray-700">เลขบัตรประชาชน
                                    <span class="text-red-500">*</span></label>
                                <input type="text" name="assistant_id" id="assistant_id" maxlength="13"
                                    class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md p-2 border"
                                    placeholder="13 หลัก">
                                <input type="hidden" id="assistant_uuid">
                            </div>
                            <div class="flex items-end">
                                <button type="button" id="searchAssistantBtn"
                                    class="inline-flex items-center px-3 py-2 border border-blue-300 shadow-sm text-sm font-medium rounded-md text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none mb-[1px]">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                        <div>
                            <label for="assistant_name" class="block text-sm font-medium text-gray-700">ชื่อ-นามสกุล
                                <span class="text-red-500">*</span></label>
                            <input type="text" name="assistant_name" id="assistant_name"
                                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md p-2 border">
                        </div>
                    </div>
                </div>
            </div>

            <!-- 5. Product List -->
            <div class="pt-4 py-6">
                <div class="mb-4">
                    <h2 class="text-xl font-semibold text-gray-900">รายการสินค้า</h2>
                </div>

                <div class="sm:overflow-x-auto">
                    <table class="w-full sm:min-w-full divide-y divide-gray-200 block sm:table">
                        <thead class="bg-gray-50 hidden sm:table-header-group">
                            <tr>
                                <th scope="col"
                                    class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-32">
                                    รหัสสินค้า</th>
                                <th scope="col"
                                    class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-20">
                                    จำนวน</th>
                                <th scope="col"
                                    class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    ชื่อสินค้า (สี/ขนาด)</th>
                                <th scope="col"
                                    class="px-3 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider w-24">
                                    ราคาต่อหน่วย</th>
                                <th scope="col"
                                    class="px-3 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider w-28">
                                    รวม</th>
                                <th scope="col" class="relative px-3 py-3 w-10">
                                    <span class="sr-only">ลบ</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody id="productTableBody" class="bg-white divide-y divide-gray-200 block sm:table-row-group">
                            <!-- Rows generated by JS -->
                        </tbody>
                    </table>
                </div>
                <div class="mt-4">
                    <button type="button" id="addProductBtn"
                        class="w-full sm:w-auto justify-center md:justify-start inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-sky-600 hover:bg-sky-700 focus:outline-none shadow-sm">
                        + เพิ่มสินค้า
                    </button>
                </div>
            </div>

            <!-- 6. Summary & 7. Shipping -->
            <div class="pt-4 grid grid-cols-1 md:grid-cols-2 gap-8 py-6">
                <!-- Shipping -->
                <div class="h-full">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">ที่อยู่จัดส่ง</h2>
                    <textarea id="shipping_address" name="shipping_address" rows="5"
                        class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 bg-white border"><%= customer ? (customer.customer_fname_th + ' ' + customer.customer_lname_th + '\n' + customer.customer_phone + '\n' + customer.customer_address1 + ' ' + customer.customer_address2 + ' ' + customer.customer_zipcode) : '' %></textarea>
                </div>

                <!-- Summary -->
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">สรุปรายการสั่งซื้อ</h2>
                    <div class="space-y-3 text-sm">
                        <div class="flex justify-between">
                            <span class="text-gray-600">รวมเป็นเงิน (ก่อนภาษี)</span>
                            <span class="font-medium text-gray-900" id="summary_subtotal">0.00</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">ส่วนลด</span>
                            <span class="font-medium text-green-600" id="summary_discount">0.00</span>
                        </div>
                        <div class="border-t border-gray-200 pt-3 flex justify-between">
                            <span class="text-gray-600">ยอดหลังหักส่วนลด</span>
                            <span class="font-medium text-gray-900" id="summary_after_discount">0.00</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">ภาษีมูลค่าเพิ่ม (7%)</span>
                            <span class="font-medium text-gray-900" id="summary_tax">0.00</span>
                        </div>
                        <div class="border-t border-gray-200 pt-3 flex justify-between items-center">
                            <span class="text-base font-bold text-gray-900">จำนวนเงินรวมทั้งสิ้น</span>
                            <span class="text-xl font-bold text-blue-600" id="summary_grand_total">0.00</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 8. Save Button -->
            <div class="pt-5 flex justify-end">
                <button type="submit"
                    class="w-full sm:w-auto inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
                    บันทึกข้อมูล
                </button>
            </div>

        </form>
    </div>

    <!-- Search Person Modal -->
    <div id="personSearchModal" class="hidden fixed z-50 inset-0 overflow-y-auto" aria-labelledby="modal-title"
        role="dialog" aria-modal="true">
        <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-gray-500/75 transition-opacity" aria-hidden="true" id="modalBackground"></div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
            <div
                class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6 relative z-10">
                <div>
                    <div class="mt-3 text-center sm:mt-5">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">ค้นหาบุคคล</h3>
                        <div class="mt-2">
                            <input type="text" id="personSearchInput"
                                class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-2 border"
                                placeholder="ระบุชื่อ หรือ เลขบัตรประชาชน...">
                            <button type="button" id="performSearchBtn"
                                class="mt-2 w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none sm:text-sm">
                                ค้นหา
                            </button>
                        </div>
                        <div class="mt-4 text-left max-h-60 overflow-y-auto" id="personSearchResults"></div>
                    </div>
                </div>
                <div class="mt-5 sm:mt-6">
                    <button type="button"
                        class="w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:text-sm"
                        onclick="closePersonSearch()" id="closeSearchModalBtn">
                        ปิด
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Global Product Search Dropdown -->
    <div id="globalProductSuggestions"
        class="hidden absolute z-50 bg-white shadow-lg max-h-60 rounded-md py-1 text-base ring-1 ring-black ring-opacity-5 overflow-auto focus:outline-none sm:text-sm">
    </div>

    <script src="/js/orders/form.js"></script>
    <%- include('partials/app-footer') %>