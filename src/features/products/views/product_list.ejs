<%- include('partials/app-header') %>
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <div class="px-4 sm:px-0 mb-6 flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">รายการสินค้า (Products)</h1>
                <p class="mt-1 text-sm text-gray-600">พบสินค้าทั้งหมด: <%= typeof totalItems !=='undefined' ? totalItems
                        : (products ? products.length : 0) %> รายการ</p>
            </div>
        </div>

        <!-- Search Box -->
        <div class="mb-8 px-4 sm:px-0">
            <form action="/products/list" method="GET" class="relative rounded-md shadow-sm max-w-xl">
                <div class="flex">
                    <div class="relative flex-grow focus-within:z-10">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                                fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd"
                                    d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                                    clip-rule="evenodd" />
                            </svg>
                        </div>
                        <input type="text" name="search" id="search"
                            class="focus:ring-indigo-500 focus:border-indigo-500 block w-full rounded-none rounded-l-md pl-10 sm:text-sm border-gray-300 py-3"
                            placeholder="ค้นหาด้วยรหัสสินค้า หรือ ชื่อสินค้า" value="<%= searchQuery %>">
                    </div>
                    <button type="submit"
                        class="-ml-px relative inline-flex items-center space-x-2 px-4 py-2 border border-gray-300 text-sm font-medium rounded-r-md text-gray-700 bg-gray-50 hover:bg-gray-100 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500">
                        <span>ค้นหา</span>
                    </button>
                    <% if (searchQuery) { %>
                        <a href="/products/list"
                            class="ml-2 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none ring-1 ring-indigo-500">
                            ล้างค่า
                        </a>
                        <% } %>
                </div>
            </form>
        </div>

        <!-- Products Table -->
        <div class="flex flex-col">
            <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                    <div class="shadow border-b border-gray-200 sm:rounded-lg">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col"
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        รหัสสินค้า
                                    </th>
                                    <th scope="col"
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        ชื่อสินค้า
                                    </th>
                                    <th scope="col"
                                        class="hidden sm:table-cell px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        สี
                                    </th>
                                    <th scope="col"
                                        class="hidden sm:table-cell px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        ขนาด
                                    </th>
                                    <th scope="col"
                                        class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        ราคา (บาท)
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% if (!products || products.length===0) { %>
                                    <tr>
                                        <!-- Update colspan to 5 to cover all columns on desktop -->
                                        <td colspan="5" class="px-6 py-12 text-center">
                                            <div class="text-center">
                                                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none"
                                                    viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                                                </svg>
                                                <h3 class="mt-2 text-sm font-medium text-gray-900">ไม่พบข้อมูลสินค้า
                                                </h3>
                                                <p class="mt-1 text-sm text-gray-500">ลองค้นหาด้วยคำค้นอื่น
                                                    หรือยังไม่มีสินค้าในระบบ</p>
                                            </div>
                                        </td>
                                    </tr>
                                    <% } else { %>
                                        <% products.forEach((product, index)=> { %>
                                            <tr data-product-index="<%= index %>"
                                                class="<%= index % 2 === 0 ? 'bg-white' : 'bg-gray-50' %> transform transition-transform duration-200 hover:scale-[1.02] hover:shadow-md hover:z-10 relative cursor-pointer">
                                                <td
                                                    class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                                    <%= product.product_code %>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                    <span class="font-medium text-gray-900">
                                                        <%= product.product_name_th || '-' %>
                                                    </span>
                                                    <!-- Mobile: Show details inline -->
                                                    <span class="text-gray-500 ml-1 sm:hidden">(<%= product.color_th
                                                            || '-' %>,
                                                            <%= product.product_size %>)</span>
                                                </td>
                                                <!-- Desktop: Show details in separate columns -->
                                                <td
                                                    class="hidden sm:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                    <%= product.color_th || '-' %>
                                                </td>
                                                <td
                                                    class="hidden sm:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                    <%= product.product_size %>
                                                </td>
                                                <td
                                                    class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right font-medium">
                                                    <%= typeof product.price_per_unit==='number' ?
                                                        product.price_per_unit.toLocaleString('th-TH') :
                                                        product.price_per_unit %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <!-- Updated Pagination -->
                    <% if (totalPages> 1) { %>
                        <div
                            class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6 mt-4 rounded-lg shadow">
                            <!-- Mobile View -->
                            <div class="flex flex-1 justify-between sm:hidden">
                                <a href="/products/list?page=<%= Math.max(1, currentPage - 1) %>&search=<%= searchQuery %>"
                                    class="<%= currentPage <= 1 ? 'pointer-events-none opacity-50' : '' %> relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                                    Previous
                                </a>
                                <a href="/products/list?page=<%= Math.min(totalPages, currentPage + 1) %>&search=<%= searchQuery %>"
                                    class="<%= currentPage >= totalPages ? 'pointer-events-none opacity-50' : '' %> relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                                    Next
                                </a>
                            </div>

                            <!-- PC View -->
                            <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                                <div>
                                    <p class="text-sm text-gray-700">
                                        Showing
                                        <span class="font-medium">
                                            <%= totalItems> 0 ? (currentPage - 1) * 20 + 1 : 0 %>
                                        </span>
                                        to
                                        <span class="font-medium">
                                            <%= Math.min(currentPage * 20, totalItems) %>
                                        </span>
                                        of
                                        <span class="font-medium">
                                            <%= totalItems %>
                                        </span>
                                        results
                                    </p>
                                </div>
                                <div>
                                    <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm"
                                        aria-label="Pagination">
                                        <!-- First Page -->
                                        <a href="/products/list?page=1&search=<%= searchQuery %>"
                                            class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                                            <span class="sr-only">First</span>
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                                                fill="currentColor" class="size-5 w-5 h-5">
                                                <path fill-rule="evenodd"
                                                    d="M15.79 14.77a.75.75 0 0 1-1.06 0l-4.5-4.5a.75.75 0 0 1 0-1.06l4.5-4.5a.75.75 0 1 1 1.06 1.06L11.81 10l3.98 3.97a.75.75 0 0 1 0 1.06zm-6 0a.75.75 0 0 1-1.06 0l-4.5-4.5a.75.75 0 0 1 0-1.06l4.5-4.5a.75.75 0 0 1 1.06 1.06L5.81 10l3.98 3.97a.75.75 0 0 1 0 1.06z"
                                                    clip-rule="evenodd" />
                                            </svg>
                                        </a>

                                        <!-- Previous -->
                                        <a href="/products/list?page=<%= Math.max(1, currentPage - 1) %>&search=<%= searchQuery %>"
                                            class="relative inline-flex items-center px-2 py-2 text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                                            <span class="sr-only">Previous</span>
                                            <svg class="size-5 w-5 h-5" viewBox="0 0 20 20" fill="currentColor"
                                                aria-hidden="true">
                                                <path fill-rule="evenodd"
                                                    d="M11.78 5.22a.75.75 0 0 1 0 1.06L8.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06l-4.25-4.25a.75.75 0 0 1 0-1.06l4.25-4.25a.75.75 0 0 1 1.06 0Z"
                                                    clip-rule="evenodd" />
                                            </svg>
                                        </a>

                                        <% let pages=[]; if (totalPages <=7) { for (let i=1; i <=totalPages; i++)
                                            pages.push(i); } else { if (currentPage <=4) { pages=[1, 2, 3, 4, 5, '...' ,
                                            totalPages]; } else if (currentPage>= totalPages - 3) {
                                            pages = [1, '...', totalPages - 4, totalPages - 3, totalPages - 2,
                                            totalPages - 1, totalPages];
                                            } else {
                                            pages = [1, '...', currentPage - 1, currentPage, currentPage + 1, '...',
                                            totalPages];
                                            }
                                            }
                                            %>

                                            <% pages.forEach(page=> { %>
                                                <% if (page==='...' ) { %>
                                                    <span
                                                        class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 ring-1 ring-inset ring-gray-300 focus:outline-offset-0">...</span>
                                                    <% } else { %>
                                                        <a href="/products/list?page=<%= page %>&search=<%= searchQuery %>"
                                                            class="<%= page === currentPage ? 'relative z-10 inline-flex items-center bg-blue-600 px-4 py-2 text-sm font-medium text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' : 'relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0' %>">
                                                            <%= page %>
                                                        </a>
                                                        <% } %>
                                                            <% }); %>

                                                                <!-- Next -->
                                                                <a href="/products/list?page=<%= Math.min(totalPages, currentPage + 1) %>&search=<%= searchQuery %>"
                                                                    class="relative inline-flex items-center px-2 py-2 text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                                                                    <span class="sr-only">Next</span>
                                                                    <svg class="size-5 w-5 h-5" viewBox="0 0 20 20"
                                                                        fill="currentColor" aria-hidden="true">
                                                                        <path fill-rule="evenodd"
                                                                            d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z"
                                                                            clip-rule="evenodd" />
                                                                    </svg>
                                                                </a>

                                                                <!-- Last Page -->
                                                                <a href="/products/list?page=<%= totalPages %>&search=<%= searchQuery %>"
                                                                    class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                                                                    <span class="sr-only">Last</span>
                                                                    <svg xmlns="http://www.w3.org/2000/svg"
                                                                        viewBox="0 0 20 20" fill="currentColor"
                                                                        class="size-5 w-5 h-5">
                                                                        <path fill-rule="evenodd"
                                                                            d="M4.21 5.23a.75.75 0 0 1 1.06 0l4.5 4.5a.75.75 0 0 1 0 1.06l-4.5 4.5a.75.75 0 0 1-1.06-1.06L8.19 10 4.21 6.03a.75.75 0 0 1 0-1.06zm6 0a.75.75 0 0 1 1.06 0l4.5 4.5a.75.75 0 0 1 0 1.06l-4.5 4.5a.75.75 0 0 1-1.06-1.06L14.19 10l-3.98-3.97a.75.75 0 0 1 0-1.06z"
                                                                            clip-rule="evenodd" />
                                                                    </svg>
                                                                </a>
                                    </nav>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Details Modal -->

    <div id="productModal" class="hidden relative z-50" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <!-- Background overlay -->
        <div id="modalOverlay" class="fixed inset-0 bg-gray-500 opacity-20 transition-opacity" aria-hidden="true">
        </div>

        <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
            <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
                <div
                    class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-4xl">
                    <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                        <div class="sm:flex sm:items-start">
                            <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
                                <h3 class="text-lg leading-6 font-medium text-gray-900 pb-2 border-b mb-4 flex justify-between items-center"
                                    id="modal-title">
                                    <span id="modalProductName">Product Name</span>
                                    <span class="text-sm text-gray-500 font-normal" id="modalProductCode">#CODE</span>
                                </h3>

                                <!-- Measurement Grid -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                                    <!-- Bust Section -->
                                    <div class="bg-pink-50 rounded-lg p-4">
                                        <h4 class="font-semibold text-pink-800 mb-3 flex items-center">
                                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 512 512"
                                                xmlns="http://www.w3.org/2000/svg">
                                                <circle cx="256" cy="56" r="56" />
                                                <path
                                                    d="M437,128H75a27,27,0,0,0,0,54H176.88c6.91,0,15,3.09,19.58,15,5.35,13.83,2.73,40.54-.57,61.23l-4.32,24.45a.42.42,0,0,1-.12.35l-34.6,196.81A27.43,27.43,0,0,0,179,511.58a27.06,27.06,0,0,0,31.42-22.29l23.91-136.8S242,320,256,320c14.23,0,21.74,32.49,21.74,32.49l23.91,136.92a27.24,27.24,0,1,0,53.62-9.6L320.66,283a.45.45,0,0,0-.11-.35l-4.33-24.45c-3.3-20.69-5.92-47.4-.57-61.23,4.56-11.88,12.91-15,19.28-15H437a27,27,0,0,0,0-54Z" />
                                            </svg>
                                            รอบอก (Bust)
                                        </h4>
                                        <div class="space-y-2 text-sm">
                                            <div class="flex justify-between border-b border-pink-100 pb-1">
                                                <span class="text-gray-600">Under Bust:</span>
                                                <span class="font-medium" id="modalUnderBust">-</span>
                                            </div>
                                            <div class="flex justify-between border-b border-pink-100 pb-1">
                                                <span class="text-gray-600">Top Bust:</span>
                                                <span class="font-medium" id="modalTopBust">-</span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Waist Section -->
                                    <div class="bg-yellow-50 rounded-lg p-4">
                                        <h4 class="font-semibold text-yellow-800 mb-3 flex items-center">
                                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 512 512"
                                                xmlns="http://www.w3.org/2000/svg">
                                                <circle cx="256" cy="56" r="56" />
                                                <path
                                                    d="M437,128H75a27,27,0,0,0,0,54H176.88c6.91,0,15,3.09,19.58,15,5.35,13.83,2.73,40.54-.57,61.23l-4.32,24.45a.42.42,0,0,1-.12.35l-34.6,196.81A27.43,27.43,0,0,0,179,511.58a27.06,27.06,0,0,0,31.42-22.29l23.91-136.8S242,320,256,320c14.23,0,21.74,32.49,21.74,32.49l23.91,136.92a27.24,27.24,0,1,0,53.62-9.6L320.66,283a.45.45,0,0,0-.11-.35l-4.33-24.45c-3.3-20.69-5.92-47.4-.57-61.23,4.56-11.88,12.91-15,19.28-15H437a27,27,0,0,0,0-54Z" />
                                            </svg>
                                            รอบเอว (Waist)
                                        </h4>
                                        <div class="space-y-2 text-sm">
                                            <div class="flex justify-between border-b border-yellow-100 pb-1">
                                                <span class="text-gray-600">Min:</span>
                                                <span class="font-medium" id="modalWaistMin">-</span>
                                            </div>
                                            <div class="flex justify-between">
                                                <span class="text-gray-600">Max:</span>
                                                <span class="font-medium" id="modalWaistMax">-</span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Hip Section -->
                                    <div class="bg-purple-50 rounded-lg p-4">
                                        <h4 class="font-semibold text-purple-800 mb-3 flex items-center">
                                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 512 512"
                                                xmlns="http://www.w3.org/2000/svg">
                                                <circle cx="256" cy="56" r="56" />
                                                <path
                                                    d="M437,128H75a27,27,0,0,0,0,54H176.88c6.91,0,15,3.09,19.58,15,5.35,13.83,2.73,40.54-.57,61.23l-4.32,24.45a.42.42,0,0,1-.12.35l-34.6,196.81A27.43,27.43,0,0,0,179,511.58a27.06,27.06,0,0,0,31.42-22.29l23.91-136.8S242,320,256,320c14.23,0,21.74,32.49,21.74,32.49l23.91,136.92a27.24,27.24,0,1,0,53.62-9.6L320.66,283a.45.45,0,0,0-.11-.35l-4.33-24.45c-3.3-20.69-5.92-47.4-.57-61.23,4.56-11.88,12.91-15,19.28-15H437a27,27,0,0,0,0-54Z" />
                                            </svg>
                                            สะโพก (Hip)
                                        </h4>
                                        <div class="space-y-2 text-sm">
                                            <div class="flex justify-between border-b border-purple-100 pb-1">
                                                <span class="text-gray-600">Min:</span>
                                                <span class="font-medium" id="modalHipMin">-</span>
                                            </div>
                                            <div class="flex justify-between">
                                                <span class="text-gray-600">Max:</span>
                                                <span class="font-medium" id="modalHipMax">-</span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Height Section -->
                                    <div class="bg-green-50 rounded-lg p-4">
                                        <h4 class="font-semibold text-green-800 mb-3 flex items-center">
                                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 512 512"
                                                xmlns="http://www.w3.org/2000/svg">
                                                <circle cx="256" cy="56" r="56" />
                                                <path
                                                    d="M437,128H75a27,27,0,0,0,0,54H176.88c6.91,0,15,3.09,19.58,15,5.35,13.83,2.73,40.54-.57,61.23l-4.32,24.45a.42.42,0,0,1-.12.35l-34.6,196.81A27.43,27.43,0,0,0,179,511.58a27.06,27.06,0,0,0,31.42-22.29l23.91-136.8S242,320,256,320c14.23,0,21.74,32.49,21.74,32.49l23.91,136.92a27.24,27.24,0,1,0,53.62-9.6L320.66,283a.45.45,0,0,0-.11-.35l-4.33-24.45c-3.3-20.69-5.92-47.4-.57-61.23,4.56-11.88,12.91-15,19.28-15H437a27,27,0,0,0,0-54Z" />
                                            </svg>
                                            ส่วนสูง (Height)
                                        </h4>
                                        <div class="space-y-2 text-sm">
                                            <div class="flex justify-between border-b border-green-100 pb-1">
                                                <span class="text-gray-600">Min:</span>
                                                <span class="font-medium" id="modalHeightMin">-</span>
                                            </div>
                                            <div class="flex justify-between">
                                                <span class="text-gray-600">Max:</span>
                                                <span class="font-medium" id="modalHeightMax">-</span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                        <button type="button" id="closeModalBtn"
                            class="w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:ml-3 sm:w-auto sm:text-sm">
                            ปิด
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script to handle Modal -->
    <!-- Safe Data Injection -->
    <script id="products-data" type="application/json">
        <%- JSON.stringify(products) %>
    </script>
    <script src="/js/products/list.js"></script>
    <%- include('partials/app-footer') %>