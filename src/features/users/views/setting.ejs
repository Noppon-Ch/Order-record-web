<%- include('main', { body: `
<div class="max-w-4xl mx-auto w-full">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">การตั้งค่าบัญชี (Account Settings)</h1>
        <p class="text-gray-500 mt-2">จัดการข้อมูลส่วนตัวและข้อมูลการชำระเงินของคุณ</p>
    </div>

    ${ typeof success !=='undefined' && success ? `
        <div class="mb-6 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg flex items-center gap-2 animate-fade-in-down">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>บันทึกข้อมูลเรียบร้อยแล้ว</span>
        </div>
    ` : '' }

    ${ typeof error !=='undefined' && error ? `
        <div class="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg flex items-center gap-2 animate-fade-in-down">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            <span>เกิดข้อผิดพลาด: ${ typeof error==='object' ? JSON.stringify(error) : error }</span>
        </div>
    ` : '' }

    <form action="/user/setting" method="POST" class="space-y-8">
        <!-- General Info Section -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-100 bg-gray-50/50">
                <h2 class="text-lg font-semibold text-gray-800 flex items-center gap-2">
                    <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    ข้อมูลทั่วไป (General Information)
                </h2>
            </div>
            <div class="p-6 grid gap-6 md:grid-cols-2">
                <div>
                    <label for="user_full_name" class="block text-sm font-medium text-gray-700 mb-1">ชื่อ-นามสกุล (Full Name)</label>
                    <input type="text" name="user_full_name" id="user_full_name" value="${ user?.user_full_name || '' }"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-100 focus:border-blue-400 transition-colors outline-none"
                        placeholder="กรอกชื่อ-นามสกุล">
                </div>
                <div>
                    <label for="user_phone" class="block text-sm font-medium text-gray-700 mb-1">เบอร์โทรศัพท์ (Phone)</label>
                    <input type="tel" name="user_phone" id="user_phone" value="${ user?.user_phone || '' }"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-100 focus:border-blue-400 transition-colors outline-none"
                        placeholder="08x-xxx-xxxx">
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-1">อีเมล (Email)</label>
                    <input type="text" value="${ user?.user_email || '' }" disabled
                        class="w-full px-4 py-2 rounded-lg border border-gray-200 bg-gray-50 text-gray-500 cursor-not-allowed">
                    <p class="text-xs text-gray-400 mt-1">* อีเมลไม่สามารถแก้ไขได้</p>
                </div>
            </div>
        </div>
        <!-- Payment Info Section -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-100 bg-gray-50/50">
                <h2 class="text-lg font-semibold text-gray-800 flex items-center gap-2">
                    <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                    </svg>
                    ข้อมูลการชำระเงิน (Payment Information)
                </h2>
            </div>
            <div class="p-6 grid gap-6 md:grid-cols-2">
                <div>
                    <label for="user_payment_channel" class="block text-sm font-medium text-gray-700 mb-1">ช่องทางการชำระเงิน (Payment Channel)</label>
                    <select name="user_payment_channel" id="user_payment_channel"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-100 focus:border-green-400 transition-colors outline-none">
                        <option value="">เลือกช่องทาง</option>
                        <option value="bank_transfer" ${user?.user_payment_channel==='bank_transfer' ? 'selected' : ''}>โอนเงินบัญชีธนาคาร</option>
                        <option value="promptpay" ${user?.user_payment_channel==='promptpay' ? 'selected' : ''}>พร้อมเพย์ (PromptPay)</option>
                        <option value="cash" ${user?.user_payment_channel==='cash' ? 'selected' : ''}>เงินสด (Cash)</option>
                    </select>
                </div>
                <div>
                    <label for="user_payment_bank" class="block text-sm font-medium text-gray-700 mb-1">ธนาคาร (Bank)</label>
                    <input type="text" name="user_payment_bank" id="user_payment_bank" value="${ user?.user_payment_bank || '' }"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-100 focus:border-green-400 transition-colors outline-none"
                        placeholder="เช่น กสิกรไทย, ไทยพาณิชย์">
                </div>
                <div class="md:col-span-2">
                    <label for="user_payment_id" class="block text-sm font-medium text-gray-700 mb-1">เลขที่บัญชี / เบอร์พร้อมเพย์ (Account No. / PromptPay ID)</label>
                    <input type="text" name="user_payment_id" id="user_payment_id" value="${ user?.user_payment_id || '' }"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-100 focus:border-green-400 transition-colors outline-none"
                        placeholder="กรอกเลขที่บัญชี">
                </div>
            </div>
        </div>
        <div class="flex justify-end">
            <button type="submit" class="px-8 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-bold rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transform transition duration-200 ease-in-out">
                บันทึกการเปลี่ยนแปลง (Save Changes)
            </button>
        </div>
    </form>
</div>
` }) %>