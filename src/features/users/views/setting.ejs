<%- include('partials/app-header') %>

    <div class="max-w-7xl mx-auto py-0 sm:py-10 px-0 sm:px-6 lg:px-8 animate-fade-in-up">

        <!-- Alerts -->
        <% if (typeof success !=='undefined' && success) { %>
            <div
                class="mb-6 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg flex items-center gap-2 animate-fade-in-down">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>บันทึกข้อมูลเรียบร้อยแล้ว</span>
            </div>
            <% } %>

                <% if (typeof error !=='undefined' && error) { %>
                    <div
                        class="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg flex items-center gap-2 animate-fade-in-down">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        <span>เกิดข้อผิดพลาด: <%= typeof error==='object' ? JSON.stringify(error) : error %></span>
                    </div>
                    <% } %>

                        <form action="/user/setting" method="POST"
                            class="overflow-hidden space-y-6 divide-y divide-gray-200 bg-white p-4 sm:p-8 sm:rounded-2xl sm:shadow-lg border-b sm:border border-gray-100">

                            <!-- Header -->
                            <div
                                class="-mx-4 -mt-4 p-6 sm:-mx-8 sm:-mt-8 sm:p-8 bg-gradient-to-r from-indigo-600 to-cyan-600 sm:rounded-t-2xl border-b border-gray-200 mb-8">
                                <h1 class="text-2xl sm:text-3xl font-extrabold text-white tracking-tight">
                                    การตั้งค่าบัญชี (Account Settings)</h1>
                                <p class="mt-2 text-sm text-white">จัดการข้อมูลส่วนตัวและข้อมูลการชำระเงินของคุณ</p>
                            </div>

                            <!-- General Info Section -->
                            <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 py-6">
                                <div class="sm:col-span-6">
                                    <h2 class="text-xl font-semibold text-gray-900">ข้อมูลทั่วไป (General Information)
                                    </h2>
                                </div>

                                <div class="sm:col-span-3">
                                    <label for="user_full_name"
                                        class="block text-sm font-medium text-gray-700">ชื่อ-นามสกุล (Full Name)</label>
                                    <input type="text" name="user_full_name" id="user_full_name"
                                        value="<%= user?.user_full_name || '' %>"
                                        class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 p-2 border"
                                        placeholder="กรอกชื่อ-นามสกุล">
                                </div>

                                <div class="sm:col-span-3">
                                    <label for="user_phone"
                                        class="block text-sm font-medium text-gray-700">เบอร์โทรศัพท์ (Phone)</label>
                                    <input type="tel" name="user_phone" id="user_phone"
                                        value="<%= user?.user_phone || '' %>"
                                        class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 p-2 border"
                                        placeholder="08x-xxx-xxxx">
                                </div>

                                <div class="sm:col-span-6">
                                    <label class="block text-sm font-medium text-gray-700">อีเมล (Email)</label>
                                    <input type="text" value="<%= user?.user_email || '' %>" disabled
                                        class="mt-1 block w-full shadow-sm sm:text-sm border-gray-200 bg-gray-50 text-gray-500 cursor-not-allowed rounded-md p-2 border pl-3">
                                    <p class="text-xs text-gray-400 mt-1">* อีเมลไม่สามารถแก้ไขได้</p>
                                </div>
                            </div>

                            <!-- Team Info Section -->
                            <div class="pt-4 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 py-6">
                                <div class="sm:col-span-6">
                                    <h2 class="text-xl font-semibold text-gray-900">ข้อมูลทีม (Team Information)</h2>
                                </div>

                                <div class="sm:col-span-6">
                                    <% if (typeof userTeam !=='undefined' && userTeam && userTeam.team) { %>
                                        <div class="rounded-xl border border-gray-200 overflow-hidden">
                                            <div
                                                class="p-4 bg-gray-50 flex items-center gap-4 border-b border-gray-200">
                                                <div
                                                    class="w-12 h-12 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold text-xl flex-shrink-0">
                                                    <%= userTeam.team.team_name.charAt(0).toUpperCase() %>
                                                </div>
                                                <div>
                                                    <p
                                                        class="text-xs text-gray-500 uppercase tracking-wide font-semibold">
                                                        ชื่อทีม (Team Name)</p>
                                                    <h3 class="text-lg font-bold text-gray-900 leading-tight">
                                                        <%= userTeam.team.team_name %>
                                                    </h3>
                                                </div>
                                            </div>
                                            <div class="bg-white p-4 grid grid-cols-1 sm:grid-cols-2 gap-4">
                                                <div>
                                                    <p class="text-sm font-medium text-gray-500 mb-1">บทบาท (Role)</p>
                                                    <div
                                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= userTeam.member.role === 'leader' ? 'bg-indigo-100 text-indigo-800' : 'bg-blue-100 text-blue-800' %>">
                                                        <span
                                                            class="w-1.5 h-1.5 rounded-full mr-1.5 <%= userTeam.member.role === 'leader' ? 'bg-indigo-500' : 'bg-blue-500' %>"></span>
                                                        <span class="capitalize">
                                                            <%= userTeam.member.role %>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div>
                                                    <p class="text-sm font-medium text-gray-500 mb-1">สถานะ (Status)</p>
                                                    <div
                                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= userTeam.member.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                                        <span
                                                            class="w-1.5 h-1.5 rounded-full mr-1.5 <%= userTeam.member.status === 'active' ? 'bg-green-500' : 'bg-yellow-500' %>"></span>
                                                        <span class="capitalize">
                                                            <%= userTeam.member.status %>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% } else { %>
                                            <div
                                                class="text-center py-8 bg-gray-50 rounded-xl border-2 border-dashed border-gray-300">
                                                <svg class="w-12 h-12 mx-auto text-gray-400 mb-3" fill="none"
                                                    stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0z">
                                                    </path>
                                                </svg>
                                                <p class="text-gray-500 mb-4">คุณยังไม่ได้เข้าร่วมทีม</p>
                                                <a href="/teams"
                                                    class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                                    สร้างหรือเข้าร่วมทีม
                                                </a>
                                            </div>
                                            <% } %>
                                </div>
                            </div>

                            <!-- Payment Info Section -->
                            <div class="pt-4 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 py-6">
                                <div class="sm:col-span-6">
                                    <h2 class="text-xl font-semibold text-gray-900">ข้อมูลการชำระเงิน (Payment
                                        Information)</h2>
                                </div>

                                <div class="sm:col-span-3">
                                    <label for="user_payment_channel"
                                        class="block text-sm font-medium text-gray-700">ช่องตางการชำระเงิน (Payment
                                        Channel)</label>
                                    <select name="user_payment_channel" id="user_payment_channel"
                                        class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 p-2 border">
                                        <option value="">เลือกช่องทาง</option>
                                        <option value="bank_counter" <%=user?.user_payment_channel==='bank_counter'
                                            ? 'selected' : '' %>>เค้าน์เตอร์ธนาคาร</option>
                                        <option value="atm" <%=user?.user_payment_channel==='atm' ? 'selected' : '' %>
                                            >เครื่องเอทีเอ็ม</option>
                                        <option value="mobile_banking" <%=user?.user_payment_channel==='mobile_banking'
                                            ? 'selected' : '' %>>แอปพลิเคชันมือถือ</option>
                                        <option value="kbiz" <%=user?.user_payment_channel==='kbiz' ? 'selected' : '' %>
                                            >K BIZ</option>
                                    </select>
                                </div>

                                <div class="sm:col-span-3">
                                    <label for="user_payment_bank"
                                        class="block text-sm font-medium text-gray-700">ธนาคาร (Bank)</label>
                                    <input type="text" name="user_payment_bank" id="user_payment_bank"
                                        value="<%= user?.user_payment_bank || '' %>"
                                        class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 p-2 border"
                                        placeholder="เช่น กสิกรไทย, ไทยพาณิชย์">
                                </div>

                                <div class="sm:col-span-6">
                                    <label for="user_payment_id"
                                        class="block text-sm font-medium text-gray-700">เลขที่บัญชี / เบอร์พร้อมเพย์
                                        (Account No.)</label>
                                    <input type="text" name="user_payment_id" id="user_payment_id"
                                        value="<%= user?.user_payment_id || '' %>"
                                        class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 p-2 border"
                                        placeholder="กรอกเลขที่บัญชี">
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="pt-5 flex justify-end">
                                <button type="submit"
                                    class="w-full sm:w-auto inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 transition-colors">
                                    บันทึกการเปลี่ยนแปลง (Save Changes)
                                </button>
                            </div>

                        </form>
    </div>

    <%- include('partials/app-footer') %>