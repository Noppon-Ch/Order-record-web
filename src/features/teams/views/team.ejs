<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Team | Order Record</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
</head>

<body class="bg-gray-50 flex flex-col min-h-screen">

    <%- include('../../../shared/views/partials/navbar') %>

        <main class="flex-grow container mx-auto px-4 py-8">
            <div class="max-w-4xl mx-auto">

                <div class="mb-8 flex justify-between items-center">
                    <h1 class="text-2xl font-bold text-gray-800">จัดการทีม</h1>
                </div>

                <!-- Current Team Status -->
                <% if (team) { %>
                    <!-- Team Information Form -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
                        <div class="flex items-center justify-between mb-6">
                            <div class="flex items-center gap-3">
                                <div
                                    class="w-10 h-10 rounded-lg bg-indigo-100 flex items-center justify-center text-indigo-600">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z">
                                        </path>
                                    </svg>
                                </div>
                                <h2 class="text-xl font-bold text-gray-900">ข้อมูลทีม</h2>
                            </div>
                            <% if (team.owner_user_id !==user.id) { %>
                                <button type="button" id="leaveTeamBtn"
                                    class="px-4 py-2 text-sm font-medium text-red-600 bg-red-50 hover:bg-red-100 rounded-lg transition-colors flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
                                        </path>
                                    </svg>
                                    ออกจากทีม
                                </button>
                                <% } %>
                        </div>

                        <form class="space-y-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">ชื่อทีม</label>
                                    <input type="text" value="<%= team.team_name %>" readonly
                                        class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-700 focus:outline-none cursor-default">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">รหัสทีม (Team
                                        Code)</label>
                                    <div class="flex">
                                        <input type="text" value="<%= team.team_code %>" readonly
                                            class="flex-grow px-4 py-2 bg-gray-50 border border-gray-200 rounded-l-lg text-gray-700 focus:outline-none cursor-default font-mono">
                                        <button type="button" id="copyTeamCodeBtn"
                                            data-team-code="<%= team.team_code %>"
                                            class="px-4 py-2 bg-gray-100 border border-l-0 border-gray-200 rounded-r-lg text-gray-600 hover:bg-gray-200 transition-colors">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z">
                                                </path>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">สถานะทีม</label>
                                    <span
                                        class="inline-flex px-3 py-1 rounded-full text-sm font-medium capitalize
                                        <%= team.status === 'active' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700' %>">
                                        <%= team.status %>
                                    </span>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">วันที่สร้าง</label>
                                    <input type="text"
                                        value="<%= new Date(team.created_at).toLocaleDateString('th-TH') %>" readonly
                                        class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-700 focus:outline-none cursor-default">
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Team Members Table -->
                    <div class="mb-6">
                        <% if (myMembership.status==='pending' ) { %>
                            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-4">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd"
                                                d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                                                clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm text-yellow-700">
                                            สถานะของคุณคือ <span class="font-bold">รอการอนุมัติ (Pending)</span>
                                            <br>คุณจะเห็นข้อมูลสมาชิกคนอื่นเมื่อได้รับการอนุมัติจากหัวหน้าทีม
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                                <div class="flex items-center justify-between mb-2">
                                    <div class="flex items-center gap-3">
                                        <div
                                            class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center text-blue-600">
                                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z">
                                                </path>
                                            </svg>
                                        </div>
                                        <div>
                                            <h2 class="text-xl font-bold text-gray-900">สมาชิกในทีม</h2>
                                            <p class="text-sm text-gray-500">จำนวนสมาชิก <%= members.length %> คน</p>
                                        </div>
                                    </div>
                                </div>
                    </div>

                    <div class="overflow-hidden border border-gray-200 rounded-lg">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col"
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        ชื่อ - สกุล</th>
                                    <th scope="col"
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        ตำแหน่ง</th>
                                    <% const myRole=myMembership.role; const myStatus=myMembership.status; if
                                        ((myRole==='leader' || myRole==='co-leader' ) && myStatus==='active' ) { %>
                                        <th scope="col"
                                            class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            จัดการ</th>
                                        <% } %>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% members.forEach(member=> { %>
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="flex-shrink-0 h-10 w-10">
                                                    <% if (member.user_profile && member.user_profile.user_avatar_url) {
                                                        %>
                                                        <img class="h-10 w-10 rounded-full object-cover"
                                                            src="<%= member.user_profile.user_avatar_url %>" alt="">
                                                        <% } else { %>
                                                            <div
                                                                class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-500 font-bold">
                                                                <%= member.user_profile &&
                                                                    member.user_profile.user_full_name ?
                                                                    member.user_profile.user_full_name.charAt(0).toUpperCase()
                                                                    : 'U' %>
                                                            </div>
                                                            <% } %>
                                                </div>
                                                <div class="ml-4">
                                                    <div class="text-sm font-medium text-gray-900">
                                                        <%= member.user_profile ? member.user_profile.user_full_name
                                                            : 'Unknown User' %>
                                                            <% if (member.user_id===user.id) { %>
                                                                <span
                                                                    class="ml-2 px-2 py-0.5 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">It's
                                                                    You</span>
                                                                <% } %>
                                                                    <% if (member.status==='pending' ) { %>
                                                                        <span
                                                                            class="ml-2 px-2 py-0.5 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">Pending</span>
                                                                        <% } %>
                                                    </div>
                                                    <div class="text-sm text-gray-500">
                                                        <%= member.user_profile ? member.user_profile.user_email : '' %>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span
                                                class="px-2 py-1 text-xs font-semibold rounded-full
                                                <%= member.role === 'leader' ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-100 text-gray-600' %>">
                                                <%= member.role.charAt(0).toUpperCase() + member.role.slice(1) %>
                                            </span>
                                        </td>
                                        <% const targetIsLeader=member.role==='leader' ; const
                                            amILeader=myMembership.role==='leader' ; const
                                            amICoLeader=myMembership.role==='co-leader' ; let canShowManage=false; if
                                            (!targetIsLeader) { if (amILeader) { canShowManage=true; } else if
                                            (amICoLeader && member.status==='pending' ) { canShowManage=true; } } if
                                            ((amILeader || amICoLeader) && myMembership.status==='active' ) { %>
                                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                <% if (canShowManage) { %>
                                                    <div class="relative inline-block text-left">
                                                        <button type="button"
                                                            class="manage-dropdown-btn inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none"
                                                            data-member-id="<%= member.id %>">
                                                            จัดการ
                                                            <svg class="-mr-1 ml-2 h-5 w-5"
                                                                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                                                                fill="currentColor" aria-hidden="true">
                                                                <path fill-rule="evenodd"
                                                                    d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                                                    clip-rule="evenodd" />
                                                            </svg>
                                                        </button>

                                                        <div class="hidden origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10"
                                                            id="dropdown-<%= member.id %>">
                                                            <div class="py-1 flex flex-col" role="menu"
                                                                aria-orientation="vertical"
                                                                aria-labelledby="options-menu">
                                                                <% if (member.status==='pending' ) { %>
                                                                    <button type="button"
                                                                        class="approve-member-btn block w-full text-left px-4 py-2 text-sm text-green-700 hover:bg-green-50"
                                                                        role="menuitem"
                                                                        data-member-id="<%= member.id %>">
                                                                        1. อนุมัติ (Approve)
                                                                    </button>
                                                                    <% if (amILeader) { %>
                                                                        <button type="button"
                                                                            class="remove-member-btn block w-full text-left px-4 py-2 text-sm text-red-700 hover:bg-red-50"
                                                                            role="menuitem"
                                                                            data-member-id="<%= member.id %>">
                                                                            2. ปฏิเสธ (Reject)
                                                                        </button>
                                                                        <% } %>
                                                                            <% } else if (member.status==='active' &&
                                                                                amILeader) { %>
                                                                                <div
                                                                                    class="px-4 py-2 text-xs text-gray-500 font-semibold">
                                                                                    3. ปรับตำแหน่ง (Position)</div>
                                                                                <button type="button"
                                                                                    class="change-role-btn block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                                                                                    role="menuitem"
                                                                                    data-member-id="<%= member.id %>"
                                                                                    data-role="co-leader">
                                                                                    - Co-leader (ผู้ช่วย)
                                                                                </button>
                                                                                <button type="button"
                                                                                    class="change-role-btn block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                                                                                    role="menuitem"
                                                                                    data-member-id="<%= member.id %>"
                                                                                    data-role="member">
                                                                                    - Member (สมาชิก)
                                                                                </button>

                                                                                <div
                                                                                    class="border-t border-gray-100 my-1">
                                                                                </div>
                                                                                <button type="button"
                                                                                    class="remove-member-btn block w-full text-left px-4 py-2 text-sm text-red-700 hover:bg-red-50"
                                                                                    role="menuitem"
                                                                                    data-member-id="<%= member.id %>">
                                                                                    4. ลบออกจากทีม (Remove)
                                                                                </button>
                                                                                <% } %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                            </td>
                                            <% } %>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
            </div>
            <% } else { %>
                <!-- No Team State -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                    <!-- Join Team -->
                    <div
                        class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col h-full hover:shadow-md transition-shadow">
                        <div class="mb-4 text-indigo-600">
                            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z">
                                </path>
                            </svg>
                        </div>
                        <h3 class="text-lg font-bold text-gray-900 mb-2">เข้าร่วมทีม</h3>
                        <p class="text-gray-500 text-sm mb-6 flex-grow">
                            ค้นหาทีมที่มีอยู่แล้วเพื่อเข้าร่วมทำงานกับผู้อื่น</p>

                        <form id="joinTeamForm" class="space-y-4">
                            <div>
                                <label for="teamCode" class="block text-sm font-medium text-gray-700 mb-1">รหัสทีม (Team
                                    Code)</label>
                                <input type="text" id="teamCode" name="teamCode" required
                                    class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-colors"
                                    placeholder="เช่น AB1234">
                            </div>
                            <button type="submit"
                                class="w-full py-2.5 px-4 bg-white border border-indigo-600 text-indigo-600 font-semibold rounded-lg hover:bg-indigo-50 transition-colors">
                                เข้าร่วมทีม
                            </button>
                        </form>
                    </div>

                    <!-- Create Team -->
                    <div
                        class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col h-full hover:shadow-md transition-shadow">
                        <div class="mb-4 text-purple-600">
                            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                        </div>
                        <h3 class="text-lg font-bold text-gray-900 mb-2">สร้างทีมใหม่</h3>
                        <p class="text-gray-500 text-sm mb-6 flex-grow">
                            สร้างพื้นที่ทำงานของคุณเองและเชิญสมาชิกมาร่วมทีม</p>

                        <button id="openCreateTeamBtn"
                            class="w-full py-2.5 px-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg hover:shadow-lg hover:scale-[1.02] transition-all duration-200">
                            สร้างทีม
                        </button>
                    </div>

                </div>

                <!-- Create Team Modal -->
                <div id="createTeamModal" class="fixed inset-0 z-50 hidden overflow-y-auto"
                    aria-labelledby="modal-title" role="dialog" aria-modal="true">
                    <div
                        class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">

                        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"
                            id="closeCreateTeamOverlay"></div>

                        <span class="hidden sm:inline-block sm:align-middle sm:h-screen"
                            aria-hidden="true">&#8203;</span>

                        <div
                            class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full relative z-50">
                            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                                <div class="sm:flex sm:items-start">
                                    <div
                                        class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-purple-100 sm:mx-0 sm:h-10 sm:w-10">
                                        <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z">
                                            </path>
                                        </svg>
                                    </div>
                                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                                            สร้างทีมใหม่</h3>
                                        <div class="mt-2">
                                            <p class="text-sm text-gray-500 mb-4">
                                                กรุณาระบุชื่อทีมของคุณเพื่อเริ่มต้นใช้งาน
                                                (สามารถเปลี่ยนแปลงได้ภายหลัง)</p>
                                            <form id="createTeamForm">
                                                <label for="teamName"
                                                    class="block text-sm font-medium text-gray-700 mb-1">ชื่อทีม</label>
                                                <input type="text" id="teamName" name="teamName" required
                                                    class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none"
                                                    placeholder="เช่น Dream Team">
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                                <button type="button" id="submitCreateTeamBtn"
                                    class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-purple-600 text-base font-medium text-white hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 sm:ml-3 sm:w-auto sm:text-sm">
                                    ยืนยันสร้างทีม
                                </button>
                                <button type="button" id="cancelCreateTeamBtn"
                                    class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                                    ยกเลิก
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Search Teams Section (Optional Enhancement for joining) -->
                <div class="mt-8 bg-white rounded-xl shadow-sm border border-gray-100 p-6 hidden" id="searchSection">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">ค้นหาทีม</h3>
                    <div class="flex gap-2 mb-4">
                        <input type="text" id="searchTeamInput" placeholder="พิมพ์ชื่อทีมเพื่อค้นหา..."
                            class="flex-grow px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 outline-none">
                        <button id="searchTeamsBtn"
                            class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200">ค้นหา</button>
                    </div>
                    <div id="searchResults" class="space-y-2"></div>
                </div>

                <% } %>

                    </div>
        </main>

        <script nonce="<%= nonce %>">
            document.addEventListener('DOMContentLoaded', () => {
                // --- Safe DOM Elements ---
                const createTeamModal = document.getElementById('createTeamModal');
                const openCreateTeamBtn = document.getElementById('openCreateTeamBtn');
                const closeCreateTeamOverlay = document.getElementById('closeCreateTeamOverlay');
                const cancelCreateTeamBtn = document.getElementById('cancelCreateTeamBtn');
                const submitCreateTeamBtn = document.getElementById('submitCreateTeamBtn');
                const searchTeamsBtn = document.getElementById('searchTeamsBtn');

                // --- Modal Logic ---
                function openModal() {
                    if (createTeamModal) createTeamModal.classList.remove('hidden');
                }

                function closeModal() {
                    if (createTeamModal) createTeamModal.classList.add('hidden');
                }

