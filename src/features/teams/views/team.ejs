                function toggleDropdown(id, button) {
                    const dropdown = document.getElementById('dropdown-' + id);
                    if (!dropdown) return;

                    const isHidden = dropdown.classList.contains('hidden');

                    // Close all first
                    closeAllDropdowns();

                    if (isHidden) {
                        dropdown.classList.remove('hidden');

                        // Get button position and dropdown size
                        const rect = button.getBoundingClientRect();
                        const dropdownWidth = dropdown.offsetWidth;
                        const dropdownHeight = dropdown.offsetHeight;
                        const margin = 5;

                        // Default position: below button, right-aligned
                        let left = rect.right - dropdownWidth;
                        let top = rect.bottom + margin;

                        // Prevent overflow right
                        if (left + dropdownWidth > window.innerWidth - 8) {
                            left = window.innerWidth - dropdownWidth - 8;
                        }
                        // Prevent overflow left
                        if (left < 8) {
                            left = 8;
                        }
                        // Prevent overflow bottom
                        if (top + dropdownHeight > window.innerHeight - 8) {
                            // Try to show above the button if not enough space below
                            if (rect.top - dropdownHeight - margin > 8) {
                                top = rect.top - dropdownHeight - margin;
                            } else {
                                // Clamp to bottom
                                top = window.innerHeight - dropdownHeight - 8;
                            }
                        }

                        dropdown.style.position = 'fixed';
                        dropdown.style.zIndex = '50';
                        dropdown.style.left = left + 'px';
                        dropdown.style.top = top + 'px';
                        dropdown.style.right = '';
                    }
                }

